<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotingCheck">



    <TextView
        android:id="@+id/circle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toStartOf="@+id/circle8"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/circle8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cirle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/circle9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle3"
        app:layout_constraintStart_toEndOf="@+id/circle7"
        app:layout_constraintEnd_toEndOf="@+id/circle7"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginStart="30dp"
        android:text="Voting Check"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textbox_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="Enter Your Age"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/button_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#9A5AE8"
        android:text="Check"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textbox_age"
        app:layout_constraintStart_toStartOf="@+id/textbox_age"
        app:layout_constraintTop_toBottomOf="@+id/textbox_age" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardvirewresult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#92D0EC"
        app:layout_constraintTop_toBottomOf="@+id/button_check"
        app:layout_constraintStart_toStartOf="@+id/button_check"
        app:layout_constraintEnd_toEndOf="@+id/button_check">

        <TextView
            android:id="@+id/circle_result"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@color/purple_200"
            android:gravity="center"/>



        <TextView
            android:id="@+id/resultbox"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_marginStart="130dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="33dp"/>



    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/button_back2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        app:layout_constraintTop_toBottomOf="@+id/cardvirewresult"
        app:layout_constraintStart_toStartOf="@+id/cardvirewresult"
        app:layout_constraintEnd_toEndOf="@+id/cardvirewresult"/>

    <TextView
        android:id="@+id/returnhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Return Home"
        android:clickable="true"
        android:textSize="16sp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/button_back2"
        app:layout_constraintStart_toStartOf="@+id/button_back2"
        app:layout_constraintEnd_toEndOf="@+id/button_back2"/>


</androidx.constraintlayout.widget.ConstraintLayout>